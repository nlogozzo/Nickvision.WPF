<mica:MicaWindow x:Class="Nickvision.WPF.Controls.ComboBoxDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:mica="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:local="clr-namespace:Nickvision.WPF.Controls"
                 mc:Ignorable="d" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" 
                 ResizeMode="NoResize" SystemBackdropType="Mica">
    <DockPanel Margin="0,4,0,0">
        <StackPanel DockPanel.Dock="Top" Margin="20,20,20,20" Orientation="Vertical">
            <TextBlock Name="LblDescription" FontSize="14" Text="Description"/>

            <hc:ComboBox Name="CmbChoices" Margin="0,10,0,0" MinWidth="320"/>
        </StackPanel>

        <hc:ButtonGroup DockPanel.Dock="Bottom">
            <Button Name="BtnOK" Content="OK" Click="BtnOK_Click"/>

            <Button Name="BtnCancel" Content="Cancel" Click="BtnCancel_Click"/>
        </hc:ButtonGroup>
    </DockPanel>
</mica:MicaWindow>
